<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.ancely.fyw.login.views.StrakeOutEditText
        android:id="@+id/frag_login_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="15dp"
        app:et_hint=" 手机号"
        app:input_type="phone"/>

    <com.ancely.fyw.login.views.StrakeOutEditText
        android:id="@+id/frag_login_password"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_below="@+id/frag_login_username"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:et_hint="验证码"
        app:input_type="phone"/>

    <TextView
        android:id="@+id/frag_code_code"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/frag_login_username"
        android:layout_alignTop="@+id/frag_login_password"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_bg_select_btn"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/code_get"
        android:textColor="@color/color_333333"
        android:textSize="12sp"

        />

    <Button
        android:id="@+id/frag_login_login"
        style="@style/common_btn_background"
        android:layout_below="@id/frag_login_password"
        android:layout_marginTop="30dp"
        android:text="@string/login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/frag_login_login"
        android:layout_marginTop="20dp"
        android:gravity="center">


        <TextView
            android:id="@+id/frag_code_account_login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="账号登录 |"
            android:textColor="@color/color_333333"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/jump_to_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text=" 账号注册"
            android:textColor="@color/color_333333"
            android:textSize="12sp"/>
    </LinearLayout>


</RelativeLayout>