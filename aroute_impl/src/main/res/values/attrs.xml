<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextView控件属性 -->
    <declare-styleable name="SkinTextView">
        <attr name="android:background" />
        <attr name="android:textColor" />
        <!-- 字体属性 -->
        <attr name="custom_typeface" />
    </declare-styleable>

    <!-- Button控件继承TextView，此处parent语法通过，但无效果，不像style.xml -->
    <declare-styleable name="SkinButton">
        <attr name="android:background" />
        <attr name="android:textColor" />
        <!-- 字体属性 -->
        <attr name="custom_typeface" />
    </declare-styleable>

    <!-- ImageView控件特有属性 -->
    <declare-styleable name="SkinImageView">
        <attr name="android:src" />
    </declare-styleable>

    <!-- SkinnableLinearLayout控件 -->
    <declare-styleable name="SkinLinearLayout">
        <attr name="android:background" />
    </declare-styleable>

    <!-- SkinnableRelativeLayout控件 -->
    <declare-styleable name="SkinRelativeLayout">
        <attr name="android:background" />
    </declare-styleable>

    <!-- 后续架构师拓展………………………………………………………………………… -->
    <declare-styleable name="AutoLayout_Layout">
        <attr name="base_orientation">
            <!--以竖屏的宽高做来计算尺寸-->
            <enum name="portrait" value="0" />
            <!--以横屏的宽高做来计算尺寸-->
            <enum name="landscape" value="1" />
            <!--以竖屏的宽做来计算尺寸-->
            <enum name="base_width" value="2" />
            <!--以竖屏的高做来计算尺寸-->
            <enum name="base_height" value="3" />
        </attr>
    </declare-styleable>
</resources>