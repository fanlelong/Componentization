<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserCenter_MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:text="启动Plugin插件的Service"
        android:onClick="startServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
    android:text="启动Plugin插件的Activity"
    android:onClick="startActivitys"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <Button
        android:text="注册动态广播Receiver"
        android:onClick="startReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="发送动态广播Receiver"
        android:onClick="sendReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>